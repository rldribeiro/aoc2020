<Window x:Class="AdventOfCode2020.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AdventOfCode2020"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"        
        mc:Ignorable="d"
        Title="Advent of Code 2020" Height="450" Width="800">

    <Window.Resources>
        <vm:Day01VM x:Key="day01vm" />
        <!--COLORS-->
        <SolidColorBrush x:Key="ActiveGreen" Color="#FF00FF00"/>
        <SolidColorBrush x:Key="DimGreen" Color="#FF53873E"/>
        <SolidColorBrush x:Key="Black" Color="Black"/>
    </Window.Resources>

    

    <Grid Background="Black">
        <TabControl HorizontalAlignment="Left" Height="409" Margin="10,0,0,0" VerticalAlignment="Top" Width="772" Background="Black">
            <TabItem Header="[ Day 01 ]" FontSize="10" Background="Black" Foreground="{StaticResource DimGreen}" BorderBrush="{StaticResource DimGreen}" >
                <local:Day01Control />
            </TabItem>
            <TabItem Header="[ Day 02 ]" FontSize="10" Background="Black" Foreground="{StaticResource DimGreen}" BorderBrush="{StaticResource DimGreen}" >
                <local:Day02Control />
            </TabItem>
            <TabItem Header="[ Day 03 ]" FontSize="10" Background="Black" Foreground="{StaticResource DimGreen}" BorderBrush="{StaticResource DimGreen}" >
                <local:Day03Control />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
